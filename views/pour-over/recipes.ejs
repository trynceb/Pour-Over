<%- include('../partials/header') %>

<div class="container mt-3 border rounded p-3 mx-auto" id="all-recipes-text">
  <div class="row">
  </div>
  <% recipes.forEach(function(r) { %>
    <div class="row mt-3 justify-content-center">
      <div class="col-sm-6 text-center">
        <%= r.name %>
      </div>
      <div class="col-sm-6 text-center">
        <a href="/pour-over/<%= r._id %>" class="btn btn-primary btn-sm" id="details-btn">DETAILS</a>
      </div>
    </div>
  <% }) %>
  <div class="row mt-3">
    <div class="col-sm-12 text-center">
      <a href="/" class="btn btn-sm" id="back-btn">BACK</a>
    </div>
  </div>
</div>


<%- include('../partials/footer') %>
